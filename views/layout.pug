doctype html

head
	title Discos
	meta(charset='utf-8')
	link(rel='stylesheet' href='/stylesheets/layout.css' type='text/css')

body
	script(src='javascripts/jquery.min.js')
	script(src='javascripts/jquery.grayscale.js')
	script(src='javascripts/jquery.jcarousel.pack.js')
	script(src='javascripts/jquery.jcarousel.setup.js')
	block header
		.wrapper.row1
			header#header.clear
				#logo
					h1
						a(href='index.html') The Modernist
					p Tienda de Discos
				form.form-wrapper.cf
					input(type='text' placeholder='Search here...' required='')
					button(type='submit') Search
				nav
					ul.clear
						li.active
							a(href='index.html') Home
						li
							a.drop(href='#') Géneros
							//-acá se cargan los li de géneros dinámicamente
							ul
								block generos

			block content

	block footer
		.wrapper.row3
			footer#footer.clear
				.one_quarter
					h2.title About Us
					figure.imgholder
						img(src='#f' alt='')
					p Lorem ipsum dolor sit amet
					p
						| Tel: xxxxx xxxxxxxxxx
						br
						|         Fax: xxxxx xxxxxxxxxx
						br
						|         Email: 
						a(href='#') contact@mydomain.com
		.wrapper.row4
			#copyright.clear
				p.fl_left
					| Copyright &copy; 2014 - All Rights Reserved - 
					a(href='#') Domain Name
				p.fl_right
	
